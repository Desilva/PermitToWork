@model PermitToWork.Models.ClearancePermit.LotoGlarfEntity
@{
    bool? isCanCancel = ViewBag.isCanCancel as bool?;
}
<script type="text/javascript">
    $(document).ready(function () {
        addHandlerMenu();

        $('#loto-form').click(function () {
            $('#history').val('@Url.Action("Index","Loto", new { id = Model.id })');
            changeContent('@Url.Action("Edit","Loto", new { id = Model.id_loto_permit })');
        });

        $('#glarf-form').click(function () {
            $('#history').val('@Url.Action("Index","Loto", new { id = Model.id })');
            changeContent('@Url.Action("Glarf","Loto", new { id = Model.id})');
        });

        $('#cancel-loto').click(function () {
            $('#history').val('@Url.Action("Index","Loto", new { id = Model.id })');

            $.post('@Url.Action("CancelLotoGlarf","Loto")', { id: '@Model.id' }, function (resp) {
                alert('LOTO Permit is cancelled. All related parties has been informed to sign GLARF Form and LOTO Permit Form.');
                $('#content').load('@Url.Action("Index","Loto")');
            });
        });
    });
</script>
<div id="content-header">
	<h1>Lock Out Tag Out Permit Form</h1>
</div>
<div id="breadcrumb">
	<a href="#" title="Go to Home" class="tip-bottom home"><i class="icon-home"></i> Home</a>
	<a href="#"  class="tip-bottom ptw">LOTO</a>
</div>
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span3 logo">
            <img src="../../Img/logo-clean.png" />
        </div>
        <div class="span6 title">
            <b>LOTO PERMIT FORM</b><br />
            Star Energy Geothermal (Wayang Windu) Limited
        </div>
        <div class="span3 no">
            <br /><i>No : @Model.loto_no</i>
        </div> 
    </div>
    <div class="row-fluid separator"></div>
    <div class="row-fluid">
        <div class="span12">
            <div class="widget-box">
		        <div class="widget-title">
			        <span class="icon">
				        <i class="icon-align-justify"></i>									
			        </span>
			        <h5>Related Document(s)</h5>
		        </div>
		        <div class="widget-content">
                    <div class="row-fluid">
                        <div class="span12">
                            <input type="button" class="btn btn-primary" value="LOTO Permit Form" id="loto-form" />
                            <input type="button" class="btn btn-primary" value="Group Lockout Application & Release Form" id="glarf-form" />
                            @if (isCanCancel == true)
                            {
                                <input type="button" class="btn btn-warning" value="Cancel LOTO Permit" id="cancel-loto" />
                            }
                        </div>
                    </div>
		        </div>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <input type="button" class="btn btn-default" value="Back" id="back" />
        </div>
    </div>
</div>
