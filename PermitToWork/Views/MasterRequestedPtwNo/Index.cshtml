                    parameterMap: function (options, operation) {
                        if (operation !== "read" && options) {
                            return options;
                        }
                    }
                },
                pageSize: 30,
                schema: {
                    model: {
                        id: "id",
                        fields: {
                            id: { type: "number", editable: false },
                            ptw_no: { type: "string", nullable: "true", editable: false },
                            work_description: { type: "string", nullable: "true", editable: false },
