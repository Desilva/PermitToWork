                },
                pageSize: 10
            });

        $("#grid-ptw").kendoGrid({
            dataSource: dataSourceIn,
            pageable: true,
            sortable: true,
            filterable: true,
            columns: [
                { field: "id", hidden: true },
                { field: "ptw_no", title: "PTW Number", type: "string", width: 200 },
                { field: "work_description", title: "Work Description", type: "string" },
