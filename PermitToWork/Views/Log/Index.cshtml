<div id="content-header">
	<h1>Logs</h1>
</div>
<div id="breadcrumb">
	<a href="#" title="Go to Home" class="tip-bottom home"><i class="icon-home"></i> Home</a>
	<a href="#"  class="tip-bottom ptw">Permit To Work </a>
    <a href="#" class="current">Log</a>
</div>
<div class="content-log">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Date / Time</th>
                <th>Users</th>
                <th>Status</th>
                <th>Comment, if any</th>
            </tr>
        </thead>
        <tbody>
            @foreach (PermitToWork.Models.Log.LogEntity log in ViewBag.listLogs as List<PermitToWork.Models.Log.LogEntity>)
            {
                <tr>
                    <td>@log.datetime.Value.ToString("dd MMM yyyy hh:mm tt")</td>
                    <td>@log.user.alpha_name</td>
                    <td>@log.status</td>
                    <td>@log.comment</td>
                </tr>
            }
        </tbody>
    </table>
</div>
